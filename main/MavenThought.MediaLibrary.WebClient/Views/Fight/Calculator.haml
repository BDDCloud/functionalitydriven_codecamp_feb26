%h2 Ninja Commander fight calculator

- using( Html.BeginForm("Calculator", "Fight") )
  = Html.Label("My Ninja")
  = Html.DropDownList("myNinja", Model.Ninjas, new { id = "my_ninja" })
  = Html.Label("The Opponent")
  = Html.DropDownList("opponent", Model.Opponents, new { id = "opponent" })
  = Html.Submit("Calculate")
